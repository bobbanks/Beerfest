<div class="tab-content" style="margin-top: 10px;">
    <div role="tabpanel" class="tab-pane active" id="all">
        <div class="row-fluid">
            <div class="col-md-12">
                @Html.Partial("BeerList", Model["all"])
            </div>
        </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="ales">
        <div class="row-fluid">
            <div class="col-md-12">
                @Html.Partial("BeerList", Model["ale"])
            </div>
        </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="lagers">
        <div class="row-fluid">
            <div class="col-md-12">
                @Html.Partial("BeerList", Model["lager"])
            </div>
        </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="hybrids">
        <div class="row-fluid">
            <div class="col-md-12">
                @Html.Partial("BeerList", Model["hybrid"])
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(function() {
            $(".setSortOrder").on("click", function(e) {
                e.preventDefault();
                var sortField = $(this).data('sort');
                $.cookie("sortField", sortField);
                location.reload();
            });

            $('#myTabs').stickyTabs();
        })
    </script>
}